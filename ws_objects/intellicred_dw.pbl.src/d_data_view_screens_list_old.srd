 retrieve="  SELECT sys_fields_a.field_name as ref_field_1,   
         sys_fields_b.field_name as ref_field_2,   
         sys_fields_c.field_name as ref_field_3,   
	    sys_fields_a.field_name as ref_1_type,   
         sys_fields_b.field_name as ref_2_type,   
         sys_fields_c.field_name as ref_3_type,
         sys_fields_d.field_name as exp_field,   
         data_view_screen.data_view_id,   
         data_view_screen.screen_id,   
         data_view_screen.screen_order,   
         data_view_screen.screen_name,   
         data_view_screen.screen_alias,
         data_view_screen.multi_record,
         data_view_screen.table_id,
         data_view_screen.table_id_2,
         data_view_screen.detail_2
    FROM {oj {oj {oj {oj data_view_screen  LEFT OUTER JOIN sys_fields sys_fields_a  ON data_view_screen.reference_field_1 = sys_fields_a.field_id} LEFT OUTER JOIN sys_fields sys_fields_b  ON data_view_screen.reference_field_2 = sys_fields_b.field_id} LEFT OUTER JOIN sys_fields sys_fields_c  ON data_view_screen.reference_field_3 = sys_fields_c.field_id} LEFT OUTER JOIN sys_fields sys_fields_d  ON data_view_screen.exp_field = sys_fields_d.field_id}  
   WHERE   ( data_view_screen.data_view_id = :data_view_id ) AND
           (( data_view_screen.detail_2 = 0  OR data_view_screen.detail_2 IS NULL)) AND
		 ( data_view_screen.screen_order <> 0) AND multi_record <> 'H'
